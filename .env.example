# LogAI Docker Compose Environment Variables
# Copy this file to .env and customize as needed
# .env is gitignored and should not be committed

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database name
POSTGRES_DB=logai

# PostgreSQL user
POSTGRES_USER=postgres

# PostgreSQL password (change for production!)
POSTGRES_PASSWORD=postgres

# PostgreSQL port (host port mapping)
POSTGRES_PORT=5432

# =============================================================================
# LogAI API Configuration
# =============================================================================

# Database connection URL for LogAI API
# Format: postgresql://user:password@host:port/database
# For Docker Compose, use service name 'postgres' as host
LOGAI_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/logai

# LogAI API server host (0.0.0.0 to accept connections from host)
LOGAI_HOST=0.0.0.0

# LogAI API server port (host port mapping)
LOGAI_PORT=8001

# Log retention duration in days (1-365, default: 7)
LOGAI_RETENTION_DAYS=7

# Environment mode (development, production, etc.)
LOGAI_ENV=development
